@import "variable.styl"
vendor(prop,args){
  -ms-{prop}:args
  -moz-{prop}:args
  -webkit-{prop}:args
  {prop}:args
}
my-flex(prop,args){
  display :-webkit-flex
  display:flex
  vendor(prop,args)
}

::-webkit-scrollbar {
  width: 6px; /*对垂直流动条有效*/
  height: 6px; /*对水平流动条有效*/
}

/*定义滚动条的轨道颜色、内阴影及圆角*/
::-webkit-scrollbar-track{
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
  background-color: $color-white;
  border-radius: 3px;
}


/*定义滑块颜色、内阴影及圆角*/
::-webkit-scrollbar-thumb{
  border-radius: 7px;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
  background-color: $color-red;
}

/*定义两端按钮的样式*/
::-webkit-scrollbar-button {
 display none
}

/*定义右下角汇合处的样式*/
::-webkit-scrollbar-corner {
  background:khaki;
}
